# ── MCP EDA Server Configuration ─────────────────────────────────────────────
# Copy this file to .env and fill in your values.

# Server
PORT=3334
HOST=0.0.0.0
LOG_LEVEL=INFO

# Authentication (required for live deployment)
MCP_API_KEY=your-secret-api-key-here

# Rate Limiting
RATE_LIMIT_RPM=60

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=*

# Docker Images
YOSYS_DOCKER_IMAGE=yosys:local
OPENROAD_DOCKER_IMAGE=openroad:local
OPENLANE_DOCKER_IMAGE=efabless/openlane:latest

# Docker Sandbox Limits
DOCKER_MEMORY_LIMIT=4g
DOCKER_CPU_LIMIT=2
DOCKER_NETWORK=none
EDA_TIMEOUT_SECONDS=600

# File Server
FILE_SERVER_PORT=8081
